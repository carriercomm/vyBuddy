source 'http://rubygems.org'

# Easy and robust Ruby web application deployment
gem 'passenger'

gem 'rvm'
gem 'i18n'
gem 'rails'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'bundler'

gem 'mysql2'

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

# Deploy with Capistrano
gem 'capistrano'

# To use debugger
# gem 'ruby-debug'

gem 'execjs'
gem 'therubyracer'

# Netzke framework
gem 'netzke-core'
gem 'netzke-basepack'

# Pure-Ruby implementation of the SSH2/SFTP client protocol
gem 'net-ssh'
gem 'net-sftp'

# A module for encoding and decoding (X)HTML entities
gem 'htmlentities'

# A helper class for ERB
gem 'directory_template'

# Fast autolinking library
gem 'rinku'
